<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="bamboo-status-badges"/>

    <!-- add our web resources -->
    <web-item key="badges-link" name="Badges menu item" section="chain.subMenu/chain" weight="999">
        <label key="Badges">Badges</label>
        <link linkId="badges-snippets-link">/badges/snippets.action?planKey=${planKey}</link>
        <description>Snippets link</description>
    </web-item>

    <xwork key="badges-snippets" name="Display status badge snippets">
        <package extends="buildView" name="snippets" namespace="/badges">
            <action class="tools.redfox.bamboo.status.action.SnippetsAction" name="snippets">
                <result name="input" type="freemarker">/templates/showSnippets.ftl</result>
                <result name="success" type="freemarker">/templates/showSnippets.ftl</result>
                <result name="error" type="freemarker">/error.ftl</result>
                <result name="reload" type="redirect">/badges/snippets.action?planKey=${planKey}</result>
            </action>
        </package>
    </xwork>

    <web-resource key="js" name="Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="clipboard.js" location="/js/clipboard.min.js"/>
        <context>bamboo-status-badges</context>
    </web-resource>

    <servlet class="tools.redfox.bamboo.status.servlet.BuildBadgeServlet" key="build-status" name="Build Status">
        <url-pattern>/badge/build/*</url-pattern>
    </servlet>
    <servlet class="tools.redfox.bamboo.status.servlet.DeployBadgeServlet" key="environment-status" name="Environment Status">
        <url-pattern>/badge/environment/*</url-pattern>
    </servlet>
</atlassian-plugin>
